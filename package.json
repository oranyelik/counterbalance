{
  "name": "counterbalance",
  "version": "1.0.0",
  "description": "A simple strategy game.",
  "private": true,
  "scripts": {
    "build": "webpack --config ./webpack.config.js",
    "clean": "rm -rf ./node_modules/ && rm -rf ./dist/ && rm -rf ./coverage/",
    "start": "npm run build && webpack-serve --open-path ./dist/ --open",
    "test": "jest",
    "watch": "jest --watch",
    "postinstall": "nsp check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oranyelik/counterbalance.git"
  },
  "keywords": [
    "game",
    "strategy",
    "p5",
    "typescript"
  ],
  "author": "oranyelik",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/oranyelik/counterbalance/issues"
  },
  "homepage": "https://github.com/oranyelik/counterbalance#readme",
  "devDependencies": {
    "copy-webpack-plugin": "^4.5.1",
    "jest": "^22.4.3",
    "nsp": "^3.2.1",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15",
    "webpack-serve": "^0.3.1"
  },
  "dependencies": {
    "http-server": "^0.11.1",
    "p5": "^0.6.0"
  },
  "jest": {
    "collectCoverage": true
  }
